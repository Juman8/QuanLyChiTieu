<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/customview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@color/Button"
            android:id="@+id/img_anhgroup"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/group"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_customtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/Mauchu"/>

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tv_fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Fund"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_somuc"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Số mục"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_tongchitieu"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Tổng chi tiêu"
                />
            <TextView
                android:id="@+id/tv_trangthai"
                android:layout_marginEnd="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Trạng Thái"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>